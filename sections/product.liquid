{{ 'product.css' | asset_url | stylesheet_tag }}

<section class='yc-product-card container'>
	{%- comment -%}
		Produt Showcase Images
	{%- endcomment -%}
	{% assign images = product.images %}
	{% assign product_name = product.name %}
	{% assign showcase_style = section.settings.product_images_showcase_style %}
	{% render 'product-images-showcase', images: images, product_name: product_name, showcase_style: showcase_style %}

	<input id='variantId' type='hidden'>
	{%- comment -%}
		Product details
	{%- endcomment -%}
	<div class='product-details'>
		<h1 class='product-name'>{{ product.name }}</h1>
		<h2 class='product-price'>{{ product.price | money }}</h2>
		<div class='product-quantity '>
			<label for='quantity'>Quantity</label>
			<input type='number' id='quantity' name='quantity' min='1' max='10' value='1'>
		</div>

		<form class='product-options'>
			{% for option in product.options -%}
				<div class='product-option' id='option-{{option.name}}-{{option.type}}'>
					<label class='product-option-title' for='{{option.name}}'>{{ option.name }}</label>
					{% case option.type %}
						{% when 'dropdown' %}
							<select class='yc-dropdown' name='{{option.name}}'>
								{% for item in option.values %}
									<option value='{{item}}'>{{ item }}</option>
								{% endfor %}
							</select>
						{% when 'textual_buttons' %}
							<ul class='yc-options-list'>
								{% for item in option.values %}
									<li onclick='setElementActive(this)' class='yc-options-item'>{{ item }}</li>
								{% endfor %}
							</ul>
						{% when 'radio_buttons' %}
							{% for item in option.values %}
								<div class='yc-radio-buttons'>
									<label for='{{item}}'><input type='radio' id='{{item}}' name='{{option.name}}' value='{{item}}'>{{ item }}</label>
								</div>
							{% endfor %}
						{% when 'image_based_buttons' %}
							<ul class='yc-image-options-list'>
								{% for item in option.values %}
									<li onclick='setElementActive(this)' class='yc-image-options-item'>
										<img src='{{item.preview}}' alt='{{item.value}}'>
									</li>
								{% endfor %}
							</ul>
						{% when 'upload_image_zone' %}
							<div class='yc-upload' onclick='uploadImage()'>
								<input type='file' id='yc-upload' accept='image/png, image/gif, image/jpeg'>
								<ion-icon name='cloud-upload-outline'></ion-icon>
								<span class='upload-msg'>Upload an image</span>
							</div>
						{% when 'color_base_buttons' %}
							<ul class='yc-colors-select'>
								{% for item in option.values %}
									<li onclick='setElementActive(this)' class='color-item'>
										<span class='preview' style='background-color: {{item.preview}}'></span>
										<span class='value'>{{ item.value }}</span>
									</li>
								{% endfor %}
							</ul>
					{% endcase %}
				</div>
			{%- endfor %}
		</form>
	</div>
</section>
<section class='product-description container'>{{ product.description }}</section>

{%- schema -%}
{
	"label": "Product Card",
	"settings": [
		{
			"type": "select",
			"id": "product_images_showcase_style",
			"label": "Style",
			"options": [
				{
					"value": "1",
					"label": "Style 1"
				},
				{
					"value": "2",
					"label": "Style a"
				},
				{
					"value": "3",
					"label": "Stylee 3"
				}
			],
			"default": "1"
		}
	]
}
{%- endschema -%}

{%- script -%}
const variantStr = `{{ product.variants | json }}`; const variants = JSON.parse(variantStr.slice(1,-1))
{%- endscript -%}

